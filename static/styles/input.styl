/* ----- input form styling ----- */

.mp-dialog-content
  .mp-button
    float right
  label
    margin 1% 0
    float left
    width 25%
  input, textarea
    margin 1% 0
    width 74% // 1% is buffer for browser stylesheets like border 1px...

div.mp-dialog-content
  display inline-block //strech dialog background to full height

#mp-dialog-message
  clear both
  display none

// used to set success/failure text next to icon
.mp-inline-block
  display inline-block

.error
 border 4px solid red

.mp-form-error
  z-index -1
  display inline
  position absolute


/* ------- end input forms ------ */
