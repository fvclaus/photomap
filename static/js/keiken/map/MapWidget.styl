$downArrowCenter = 48px
$downArrowBorder = 12px

.map__operations
  position: absolute;

  bottom: $downArrowBorder;
  // The border of this border has effect on "left"
  left: -1 * $downArrowCenter;

  &:before
    top: 100%;
    border: $downArrowBorder solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
    border-top-color: #cccccc;
    left: $downArrowCenter;
    margin-left: -1 * $downArrowBorder;
  &__operations
    display: flex
    box-shadow(14px -9px 2px rgba(0,0,0,0.2))
    border-radius: 10px
    border: 2px solid $border-light-grey
    overflow: hidden
    &__operation:first-child
      border-left: 0
    &__operation
      font-size: 30px
      // Something is setting the border instead
      border: 0
      border-left: 2px solid $border-light-grey
      text: white
      display: flex
      align-items: center
      flex-direction: column;
      padding: 10px
      background-color: white
      &__icon
        font-family: "icomoon"
      &__name
        display: none
        font-size: 10px
  &__close
    display: none
    text-decoration: none;
    position: absolute;
    top: 2px;
    right: 8px;
    &:after
      content: "âœ–";
