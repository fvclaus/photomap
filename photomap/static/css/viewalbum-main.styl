@import "setup"
@import "core"
@import "interactive"
@import "controls"
@import "input"

/* ------ end imports ------ */


/* ------------------------- */
/* ---- gallery styling ---- */

.mp-gallery
  height 40%
  overflow hidden
  background $background-rgba-alpha08-light
  
.mp-gallery-thumbs
  width 100%
  height 90% // title-bar is 10% (core.styl)

.mp-gallery img
  width 30%
  padding 1.5%
  display block
  float left
  background $background-color-light
  transition
  &.current
    background $current-color
  &.visited
    background $visited-color

/* ------ end gallery ------ */

/* ------------------------- */
/* slideshow & fullscreen styling */

.mp-slideshow-zoom
  width 5%
  height auto
  position absolute
  display none

.mp-slideshow
  height 40%
  
.mp-current-image
  max-width 90%
  max-height 90%
  border 1px solid white
  box-shadow(0 0 25px #000)

.mp-slideshow-image
  width 100%
  height 90% // title-bar is 10% (core.styl)
  display block

.mp-slideshow-nav
  height 90%
   
.mp-image-number
  float left
  font-size 90%

/* ------ end slideshow ------ */