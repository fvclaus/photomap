@import "setup"
@import "core"
@import "interactive"
@import "controls"
@import "input"

/* ------ end imports ------ */


/* ------------------------- */
/* ---- gallery styling ---- */

.mp-gallery
  height 45%
  padding 2%
  overflow hidden
  .mp-place-title
    width 80%
    margin 0

.mp-gallery-navigation
  width 20%
  height 100%
  img.mp-control
    width 5%
    height auto
    padding 0 2.5%
    background none

.mp-gallery-thumbs
  width 100%
  height 88% // title-bar is 10% (core.styl)
  padding 2% 0 0 0

.mp-gallery img
  width 30%
  padding 1.5%
  display block
  float left
  background $background-color-light
  transition
  &.current
    background $current-color
  &.visited
    background $visited-color

/* ------ end gallery ------ */

/* ------------------------- */
/* slideshow & fullscreen styling */

.mp-slideshow-zoom
  width 5%
  height auto
  position absolute
  display none

.mp-slideshow
  height 45%
  padding 2%
  
.mp-current-image
  max-width 90%
  max-height 90%
  border 1px solid white
  box-shadow(5px 5px 25px #000)

.mp-slideshow-image
  height 90% // title-bar is 10% (core.styl)
  display block

.mp-slideshow-nav
  height 90%
   
.mp-image-number
  float left
  font-size 90%

/* ------ end slideshow ------ */