/* ------------------------- */
/* -------- imports -------- */

@import "setup"
@import "core"
@import "interactive"
@import "controls"
@import "input"

/* ------ end imports ------ */


/* ------------------------- */
/* ---- gallery styling ---- */

.mp-gallery
  height 40%
  overflow hidden
  background $background-rgba-alpha08-light
  
.mp-gallery-thumbs
  width 100%
  height 90% // title-bar is 10% (core.styl)

.mp-gallery img
  width 150px
  height 150px
  padding 2px
  display block
  float left
  background $background-color-light
  transition
  &.current
    background $current-color
  &.visited
    background $visited-color

/* ------ end gallery ------ */

/* ------------------------- */
/* slideshow & fullscreen styling */

.mp-album-zoom
  width 10%
  height auto
  position absolute
  display none

.mp-slideshow
  height 40%
  padding 0 0 0 1%

.mp-current-image
    border 2px solid #FFFFFF

.mp-album-image
  width 100%
  height 90% // title-bar is 10% (core.styl)
  display block
  text-align center
  vertical-align middle
  position relative
  img
    max-width 95%
    max-height 95%
    border($box-shadow-light-grey)
    vertical-align middle

.mp-album-nav img
  width 5%
  height auto
  margin-top -2.5%
  z-index 10
  position absolute
  top 50%
  &.mp-album-nav-next
    left auto
    right 0%
   
.mp-image-number
  float left
  font-size 90%

/* ------ end slideshow ------ */