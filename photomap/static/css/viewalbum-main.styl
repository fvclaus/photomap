/* ------------------------- */
/* ---- gallery styling ---- */

/*
 * The proportions for the gallery are 780 : 280 (w : h)
 * nav-boxes are 60 : 240 | tiles are 120 : 240 | top&bottom border 20 (h) | space between tiles 10 (w)
 * (the percentages are calculated accordingly) | note: % in padding refers to width of containing box!
 * size and margins of thumbs has to be calculated (UIGallery.js) due to using liquid layout and jquerytools "scrollable" (-> 20000em width)
 */

.mp-gallery
  width 98%
  height 20%
  padding 0 5px
  position relative
  overflow hidden
  background-image url(/static/images/gallery-bg.png)
  background-repeat no-repeat
  background-origin padding-box
  background-position top left
  background-size 100% 100%

.mp-gallery-nav
  width 7%
  height 86%
  padding 1.2% 0  //padding refers to width of containing box -> the 1.2% are about 7% of the height
  text-align center
  span
    height 40%
    width 90%
    padding 15%
    display block
  img.mp-control
    width 50%
    height auto

.mp-gallery-main
  width 84.7% // - 2 * 7% (navi) - 1.3% (padding)
  height 86% // - 2 * 7%
  padding 1.2% 0 //padding refers to width of containing box -> the 1.2% are about 7% of the height
  padding-left 1.3%
  overflow hidden

.mp-gallery-outer
  width 100%
  height 100%
  padding 0
  position relative
  overflow hidden

.mp-gallery-inner
  height 100%
  width 20000em
  position absolute

.mp-thumb-page
  height 100%
  float left
  background none

.mp-gallery-tile
  float left
  background none

.mp-thumb
  max-width 95%
  max-height 95%

#mp-full-left-column .mp-full-gallery
  width 95%
  padding-left 5%
  overflow hidden

.mp-sortable-tile
  width 15%
  height 20%
  padding-right 5%
  margin 5px 0
  float left
  img
    border 3px solid #dadada
/* -------- end gallery --------- */

/* ------------------------------ */
/* slideshow & fullscreen styling */

.mp-slideshow
  height 54%
  padding 1% 0 0 0

.mp-slideshow-nav
  width 10%
  height 100%
  img.mp-control
    width 60%
    max-width 50px
    height auto
    max-height 50px
    background none

.mp-slideshow-inner
  height 90%
  width 100%
  padding 0

.mp-current-image
  max-width 95%
  max-height 95%
  border 5px solid #dadada
  display none

.mp-slideshow-image
  width 80%
  height 100%

.mp-slideshow-no-image-msg
  text-align center
  margin-top 20%
   
.mp-slideshow-info
  height 10%
  width 100%
  padding-top 2%
  text-align center
  
.mp-photo-title
  width 100%
  height 60%
  float left

.mp-fullscreen-photo-title
  z-index 1201
  color $font-color-inverse

.mp-dark-loader
 top 48%
 left 48%
 position absolute


/* ------ end slideshow ------ */