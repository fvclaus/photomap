/* --------------------------------------------------- */
/* --- styling of the core parts used on all pages --- */
/* --------------------------------------------------- */

/* --------------------------------------- */
/* -- styling of the core html elements -- */


/* Styling the size (including margin) in this stylesheet does not work.
 * This is, because it is not present, when the site is first displayed. 
 * The style must go into the head of the html document as inline css(!).
 */
html
  font-family $font-family // "Droid Sans"

aside
  width 80%
  padding 5px
  border 2px dashed black
  margin 10px auto
  font-size 95%
  border-radius 5px
  h3
    padding 0
    margin 0
    margin-top 5px
    font-size 100%

a
  cursor pointer

/* --------- end core elements ----------- */

/* --------------------------------------- */
/* -- core classes - used on every side -- */

.mp-container
  background-color $background-color
  // box-shadow(5px 5px 25px #A4A4A4)
  overflow hidden

.mp-alignment-div
  min-width 100%
  width 100%
  min-height 1px
  height 1px

.mp-placeholder-halfheight
  height 50%

.mp-placeholder-fullheight
  height 100%

.mp-disabled
  opacity 0.5

.mp-content
 height 79% // 80% - 1% padding. Padding 1% will make the element 1% bigger and vertical scrollbars will appear
 padding 1% 0 

.mp-zoom
  cursor -moz-zoom-in
  cursor -webkit-zoom-in
  cursor zoom-in

.mp-invisible
  position absolute
  visibility hidden
  whitespace nowrap

.disabled
  opacity .3

.mp-floatleft
  float-left
.mp-floatright
  float right

.mp-cursor-pointer
  cursor pointer

.mp-nodisplay
 display none

.mp-empty-box
  height 45%
  margin 1.5%
  background-color #BBB
  text-align center
  gradientEW()
  span
    margin 10%

.mp-bold
  font-weight bold

.mp-animate-02s
  transition(0.2s)

.mp-animate-08s
  transition(0.8s)

.mp-rotate-Y-90
  transform(rotateY(90deg))

.mp-rotate-Y-0
  transform(rotateY(0deg))

.mp-scale-X-0
  transform(scaleX(0))

.mp-scale-X-1
  transform(scaleX(1))

/* ---------- end core classes ----------- */

/* --------------------------------------- */
/* ----------- header styling ------------ */

.mp-page-header
  height 13%
  min-height 13%
  border-bottom 1px solid black
  z-index 50
  section
    margin 0 .166%
    padding 0

.mp-keiken-logo
 height 95%
 margin-left 3%

.mp-top-panel
  height 100%

.mp-page-title
  height 100%
  max-height 100%
  overflow auto // prevent long album titles from being cut
  h1
    font-size 5vh // former 200%
    text-align right
    margin 0 // reset browser stylesheets
    padding-right 10px
/* ------------ end header ------------- */

/* ------------ drop up menu ------------- */

.mp-dropup-menu
  width 10%
  height 15%
  padding 10px 10px 0 10px 
  position absolute
  z-index 25
  display none
  background-color $background-color //#dadada
  box-shadow(5px 5px 25px #A4A4A4)

.mp-dropup-menu-inner
  width  98%
  height 99%
  border 1px solid black
  border-bottom none
  background-color $background-color
  a
    width 99%
    height 50%
    position relative
    display block
    text-align center
  a:hover
    border-left 1px solid black
    background-color #dadada
  span
    width 80%
    height 50%
    margin -25% 0 0 -40%
    position absolute
    top 50%
    height 50%
    text-decoration none
    color black

/* ------------ end drop up -------------- */

/* ------------------------------------- */
/* ---------- footer styling ----------- */

.mp-page-footer
  height 3%
  font-size 2.4vh /* source: http://dev.w3.org/csswg/css3-values/#vw-unit. Scales to 2% of the viewport height */
  border-top 1px solid black
  position relative
  letter-spacing 2px
  vertical-align middle
  z-index 50
  overflow hidden
  background-color $background-color
  section
    margin 0 .16%
    padding 0

.mp-internal-links
  height 100%
  a
    float right
    text-decoration none
    color $font-color
    padding-right 5px
  a:hover
    background-color $border-color

.mp-user,
.mp-login-link
  height 100%
  text-align left
  a
    float right
    text-decoration none
    color $font-color
    padding 2px 5px 2px 0
  a:hover
    background-color $border-color
  span
    height 100%
    margin-left 1%
    float left

/* ------------- end footer ------------- */
