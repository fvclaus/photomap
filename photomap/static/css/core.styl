/* --------------------------------------------------- */
/* --- styling of the core parts used on all pages --- */
/* --------------------------------------------------- */

/* --------------------------------------- */
/* -- styling of the core html elements -- */


/* Styling the size (including margin) in this stylesheet does not work.
 * This is, because it is not present, when the site is first displayed. 
 * The style must go into the head of the html document as inline css(!).
 */
html
  font-family $font-family // "Droid Sans"
  // width // see comment above!
  // height // see comment above!

aside
  width 80%
  padding 5px
  border 2px solid gray
  margin 10px auto
  font-size 95%
  border-radius 5px
  h3
    padding 0
    margin 0
    margin-top 5px
    font-size 100%

a
  cursor pointer

/* --------- end core elements ----------- */

/* --------------------------------------- */
/* -- core classes - used on every side -- */

.mp-container
  background-color $background-color
  // box-shadow(5px 5px 25px #A4A4A4)
  overflow hidden
  height 100%
  min-height 100%

#mp-no-script div
  margin 0 auto // center element
  width 75%
  padding 0.7em

.mp-placeholder-halfheight
  height 50%

.mp-placeholder-fullheight
  height 100%

.mp-disabled
  opacity 0.5

.mp-content
 height 77% // 80% - 1% padding. Padding 1% will make the element 1% bigger and vertical scrollbars will appear
 padding 1% 0 .5% 0
 h2, h3, ol
  max-width 90%
  margin 5px auto
 ol
  padding-left 50px

.mp-zoom
  cursor -moz-zoom-in
  cursor -webkit-zoom-in
  cursor zoom-in

.mp-invisible
  position absolute
  visibility hidden
  whitespace nowrap

.disabled
  opacity .3

.mp-floatleft
  float-left
.mp-floatright
  float right

.mp-cursor-pointer
  cursor pointer

.mp-nodisplay
 display none

.mp-empty-box
  height 45%
  margin 1.5%
  background-color #BBB
  text-align center
  gradientEW()
  span
    margin 10%

.mp-bold
  font-weight bold

.mp-animate-02s
  transition(0.2s)

.mp-animate-08s
  transition(0.8s)

.mp-rotate-Y-90
  transform(rotateY(90deg))

.mp-rotate-Y-0
  transform(rotateY(0deg))

.mp-scale-X-0
  transform(scaleX(0))

.mp-scale-X-1
  transform(scaleX(1))
  
.mp-clearing
  clear both

/* ---------- end core classes ----------- */

/* --------------------------------------- */
/* ----------- header styling ------------ */

.mp-page-header
  height 13%
  min-height 13%
  border-bottom 1px solid black
  z-index 50
  section
    height 100%
    margin 0 .166%
    padding 0

.mp-keiken-logo
 height 95%
 margin-left 3%


.mp-top-panel
  height 100%

.mp-page-title
  height 100%
  max-height 100%
  overflow auto // prevent long album titles from being cut
  h1
    /* for compatiblities sake, the font-size is set via js */
    // font-size 5vh // former 200%
    margin 0 // reset browser stylesheets
    margin-top 4% // (13% (header) - 5% (font height)) / 2
    text-align right
    padding-right 10px
/* ------------ end header ------------- */

/* ------------ drop up menu ------------- */

.mp-dropup-menu
  padding 10px
  position absolute
  background-color $background-color // #dadada
  box-shadow(5px 5px 25px #A4A4A4)

/* ------------ end drop up -------------- */

/* ------------------------------------- */
/* ---------- footer styling ----------- */

.mp-page-footer
  height 5%
  padding-top 0.5% // buffer for other margins and varying glyphs
  /* this is done with js now */
  // font-size 2.4vh /* source: http://dev.w3.org/csswg/css3-values/#vw-unit. Scales to 2% of the viewport height */
  border-top 1px solid black
  position relative
  letter-spacing 2px
  z-index 50 // cover menu
  background-color $background-color // other menu will be visible through transparent menu

.mp-internal-links
  display inline-block
  float right
  a
    text-decoration none
    color $font-color
    padding-right 5px
  a:hover
    background-color $border-color

.mp-user,
.mp-login-link
  margin-left 1%
  a
    text-decoration none
    color $font-color
  a:hover
    background-color $border-color


/* ------------- end footer ------------- */
