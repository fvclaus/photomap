/* fullscreen img view */

.mp-image-zoom
  width 5%
  height auto
  position absolute
  display none
  z-index 999

.mp-image-overlay-close
  right 4%
  float none

.mp-image-overlay-close, .mp-image-nav img
  position absolute
  width 3%
  height auto
  z-index 10
  
 .mp-image-nav-next
    right 1%
 .mp-image-nav-prev
    left 1%
    
.mp-option-center
  position absolute
  z-index 1
  height 35px
  width 35px
  
.mp-option-add-wrapper
  display block
  float left
  background $background-color-light
  width 19% //trial and error with debugger
  height 20%
  border 1px solid $background-color-darker
  .mp-option-add
    display inline
    float none
    width 20%
    height 20%
    padding 0
    
.mp-controls-wrapper
  position absolute
  margin 0 2px 
  .mp-controls-options
    position relative
    top 20%
    cursor pointer
    float right

.mp-image-overlay
  position fixed
  z-index 1000
  top 0px
  left 0px
  background transparent url(../../images/black.png) repeat top left
  width 100%
  height 100%
  text-align center
  .mp-image-overlay-wrapper
    position absolute
    top 50%
    left 50%
    border $border-light
    box-shadow($box-shadow-black)

.mp-image-overlay-desc
  position absolute
  top 0px
  left 0px
  width 100%
  background transparent url(../../images/black.png) repeat top left

.mp-loading
  background transparent url(../../images/fullscreen-loader.gif) no-repeat center center
  width 48px
  height 48px
  position absolute
  top 50%
  left 50%
  margin -24px 0 0 -24px
  text-indent -9000px
