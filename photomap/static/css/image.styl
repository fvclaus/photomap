/* fullscreen img view */

.mp-image-zoom
  width 5%
  height auto
  z-index 999
  position absolute
  display none

.mp-image-overlay-close
  float none
  right 4%

.mp-image-overlay-close, .mp-image-nav img
  width 3%
  height auto
  z-index 10
  position absolute
 .mp-image-nav-next
    right 1%
 .mp-image-nav-prev
    left 1%
    
.mp-option-center
  height 35px
  width 35px
  z-index 1
  position absolute
  
.mp-option-add-wrapper
  width 19%
  height 20%
  border 1px solid $background-color-darker
  float left
  display block
  background $background-color-light
  .mp-option-add
    width 20%
    height 20%
    padding 0
    float none
    display inline

.mp-image-overlay
  width 100%
  height 100%
  z-index 1000
  position fixed
  top 0px
  left 0px
  background transparent url(../../images/black.png) repeat top left
  text-align center
  .mp-image-overlay-wrapper
    border $border-light
    position absolute
    top 50%
    left 50%
    box-shadow($box-shadow-black)

.mp-image-overlay-desc
  width 100%
  position absolute
  top 0px
  left 0px
  background transparent url(../../images/black.png) repeat top left

.mp-loading
  width 48px
  height 48px
  margin -24px 0 0 -24px
  position absolute
  top 50%
  left 50%
  background transparent url(../../images/fullscreen-loader.gif) no-repeat center center
  text-indent -9000px
