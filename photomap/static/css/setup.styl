/* -------------------------------------------------------------------------- */
/* --- collection of main styles that can easily be used on every element --- */
/* -------------------------------------------------------------------------- */

/* -------------------------- */
/* -- variable declaration -- */

$visited-color = #d60000
$current-color = #306d12

$background-color-dark = #000
$background-color-darker = #333
$background-color-lighter = #fff
$background-color-light = #f4f4f4
/*
 * for all objects which shall have an alpha value <1 (opacity < 1), but also have child-elements 
 * that should have a normal alpha-value (usually the opacity value is inherited to all child-elements)
 * therefor rgba is used in these cases.. this won't work for IE though.. -> workaround needed!
 *
 */
$background-rgba-alpha08-light = rgba(244,244,244,.8) // same as #f4f4f4
$background-rgba-alpha09-light = rgba(244,244,244,.9) // same as #f4f4f4
$background-color = #fafafa

$padding = 5px

$border = 3px 
$border-light = $border solid #fff
$border-dark = $border solid #000
$border-color = #dadada

$height-main = 84%
$width-main = 50%

$box-shadow = 1px 1px 3px
$box-shadow-light-grey = $box-shadow #999
$box-shadow-lighter-grey = $box-shadow #cac4ab
$box-shadow-black = $box-shadow #000

$transition = all 0.2s ease-in-out

$font-family = 'Droid Sans', sans-serif
$font-color = #070707
$font-color-inverse = #F8F8F8

$mp-dialog-margin-top = 5px

/* ----- end variables ------ */

/* -------------------------- */
/* --------- mixins --------- */

center-element(width,height)
  top 50%
  left 50%
  margin-left -(width/2)
  margin-top -(height/2)

box-shadow(color) 
  -moz-box-shadow color
  -webkit-box-shadow color
  box-shadow color
  
transition
  -webkit-transition $transition
  -moz-transition $transition
  -o-transition $transition
  -ms-transition $transition
  transition $transition
  
gradientNS()
  background linear-gradient(90deg, #F4F4F4, #333333)
  background -moz-linear-gradient(to bottom, #F4F4F4 5%, #333333 95%)
  background -webkit-gradient(linear, center-top, center-bottom, colorStop(21%, #F4F4F4), colorStop(95%, #333333))
  background -webkit-linear-gradient(#F4F4F4, #333333)
  background -ms-linear-gradient(to bottom, #F4F4F4 5%, #333333 95%)

gradientEW()
  background linear-gradient(0deg, #F4F4F4, #333333)
  background -moz-linear-gradient(to right, #F4F4F4 5%, #333333 95%)
  background -webkit-gradient(linear, left, right, colorStop(21%, #F4F4F4), colorStop(95%, #333333))
  background -webkit-linear-gradient(0deg, #F4F4F4, #333333)
  background -ms-linear-gradient(to right, #F4F4F4 5%, #333333 95%)

/* ------- end mixins ------- */