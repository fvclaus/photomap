/* -------------------------- */
/* -- variable declaration -- */

$visited-color = #d60000
$current-color = #306d12

$background-color-dark = #000
$background-color-darker = #333
$background-color-lighter = #fff
$background-color-light = #f4f4f4
/*
 * for all objects which shall have an alpha value <1 (opacity < 1), but also have child-elements 
 * that should have a normal alpha-value (usually the opacity value is inherited to all child-elements)
 * therefor rgba is used in these cases.. this won't work for IE though.. -> workaround needed!
 *
 */
$background-rgba-alpha08-light = rgba(244,244,244,.8) // same as #f4f4f4
$background-rgba-alpha09-light = rgba(244,244,244,.9) // same as #f4f4f4
$background-rgba-alpha08-dark = rgba(000, 000, 000, .8) 
$background-rgba-alpha09-dark = rgba(000, 000, 000, .9) 
$background-color = #fafafa

$padding = 5px

$border = 1px 
$border-light = $border solid #fff
$border-dark = $border solid #000
$border-color = #dadada

$height-main = 84%
$width-main = 50%

$box-shadow = 1px 1px 3px
$box-shadow-light-grey = $box-shadow #999
$box-shadow-lighter-grey = $box-shadow #cac4ab
$box-shadow-black = $box-shadow #000

$font-family = 'Droid Sans', sans-serif
$font-color = #070707
$font-color-inverse = #F8F8F8

$mp-dialog-margin-top = 5px

/* ----- end variables ------ */

