*//*
 flex-direction row
 justify-content center
 align-items center
 flex-wrap wrap
 -webkit-flex-direction row
 -webkit-justify-content center
 -webkit-align-items center
 -webkit-flex-wrap wrap
 -moz-flex-direction row
 -moz-justify-content center
 -moz-align-items center
 -moz-flex-wrap wrap
*/
center-element(width,height)
  top 50%
  left 50%
  margin-left -(width/2)
  margin-top -(height/2)

box-shadow(color) 
  -moz-box-shadow color
  -webkit-box-shadow color
  box-shadow color
  
transition(time)
  -webkit-transition-property all
  -moz-transition-property all
  -o-transition-property all
  -ms-transition-property all
  transition-property all
  -webkit-transition-duration time
  -moz-transition-duration time
  -o-transition-duration time
  -ms-transition-duration time
  transition-duration time
  -webkit-transition-timing-function ease-in-out
  -moz-transition-timing-function ease-in-out
  -o-transition-timing-function ease-in-out
  -ms-transition-timing-function ease-in-out
  transition-timing-function ease-in-out

transform(transformation)
  -webkit-transform transformation
  -moz-transform transformation
  -o-transform transformation
  -ms-transform transformation
  transform transformation
  
gradientNS()
  background linear-gradient(90deg, #F4F4F4, #333333)
  background -moz-linear-gradient(to bottom, #F4F4F4 5%, #333333 95%)
  background -webkit-gradient(linear, center-top, center-bottom, colorStop(21%, #F4F4F4), colorStop(95%, #333333))
  background -webkit-linear-gradient(#F4F4F4, #333333)
  background -ms-linear-gradient(to bottom, #F4F4F4 5%, #333333 95%)

gradientEW()
  background linear-gradient(0deg, #F4F4F4, #333333)
  background -moz-linear-gradient(to right, #F4F4F4 5%, #333333 95%)
  background -webkit-gradient(linear, left, right, colorStop(21%, #F4F4F4), colorStop(95%, #333333))
  background -webkit-linear-gradient(0deg, #F4F4F4, #333333)
  background -ms-linear-gradient(to right, #F4F4F4 5%, #333333 95%)

/* ------- end mixins ------- */