/* ------------------------- */
/* --- ui-loading-overlay -- */

.mp-ui-loading
  width 300px
  height 150px
  padding 25px
  border $border-dark
  border-radius 15px
  display none
  background-color $background-color
  .mp-loading-img
    text-align center
  .mp-loading-msg
    text-align left

/* ----- end ui-loading ---- */