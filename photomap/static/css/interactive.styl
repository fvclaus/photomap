/* ----------------------------------------------------------- */
/* ---- styling of the core elements on interactive pages ---- */
/* ----------------------------------------------------------- */

/* ------------------------- */
/* ----- column styling ---- */

.mp-left-column
  width 47%
  margin 0 0 0 1%
  position relative
  float left

.mp-right-column
  width 49%
  margin 0 1% 0 2%
  position relative
  float left

.mp-full-column
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  z-index 100
  background-color $background-color
  .mp-data
    width 100%
    height 90%

.mp-full-column-controls
  width 100%
  height 10%
  text-align right

/* ------- end column ------ */

/* ------------------------- */
/* ------ map styling ------ */

.mp-map
  width 98%
  height 79%
  padding 0
  border 5px solid #dadada
  margin 0

.mp-map-wrapper
  width 100%
  height 100%

/* -------- end map -------- */


/* ------------------------- */
/* -- description styling -- */

.mp-description
  width 100%
  height 43%
  padding 2% 0 0 0
  
.mp-description-wrapper
  width 80%
  height 100%
  padding 0 10%

.mp-full-description-title,
.mp-description-title
  padding 0
  text-decoration underline
  font-weight bold

.mp-full-description-body
.mp-description-body
  padding 0

.mp-full-description-wrapper
  width 100%
  height 90%
  .mp-full-description-title,
  .mp-full-description-body
    width 80%
    padding 0 10%

/* ---- end description ---- */
