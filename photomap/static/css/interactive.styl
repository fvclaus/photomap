/* ----------------------------------------------------------- */
/* ---- styling of the core elements on interactive pages ---- */
/* ----------------------------------------------------------- */

/* ------------------------- */
/* ----- column styling ---- */

.mp-left-column
  width 47%
  margin 0 0 0 1%
  position relative
  float left
  height 100% //necessary because children are also still relative to height

.mp-right-column
  width 49%
  margin 0 1% 0 2%
  position relative
  float left
  height 100% //necessary because children are also still relative to height

.mp-full-column
  width 100%
  height 100%
  position absolute 
  top 0 
  left 0
  background-color $background-color
  //TODO mp-data is not a good name
  .mp-data
    width 100%
    height 90%

/* this is needed for the full gallery */
.mp-full-left-column
  /* absolute is behind the map, unless z-index is specified. But: EditControls don't have z-index. */
  position relative
  

.mp-full-column-controls
  width 100%
  height 10%
  text-align right

/* ------- end column ------ */

/* ------------------------- */
/* ------ map styling ------ */

.mp-map
  width 98%
  height 79%
  padding 0
  border 5px solid #dadada
  margin 0

.mp-map-dashboard
   height 100%

.mp-map-wrapper
  width 100%
  height 100%

/* -------- end map -------- */


