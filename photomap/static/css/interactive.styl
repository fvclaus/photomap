/* ------------------------- */
/* ------ map styling ------ */

.mp-map
  height 74%
  padding 0
  border 5px solid #dadada
  margin 1% 0 0 1%

.mp-map-wrapper
  width 100%
  height 100%

/* -------- end map -------- */


/* ------------------------- */
/* -- description styling -- */

.mp-description
  height 45%
  padding 2% 1% 0 0
  .mp-title-bar
    margin-bottom 5px
  
.mp-description-wrapper
  width 89%
  height 86% // title-bar is 10% (core.styl)
  padding 0 5% 2% 5%
  overflow auto
  font-size 100%

/* ---- end description ---- */
