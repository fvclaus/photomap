/* ----------------------------------------------------------- */
/* ---- styling of the core elements on interactive pages ---- */
/* ----------------------------------------------------------- */

/* ------------------------- */
/* ----- column styling ---- */

.mp-left-column
  float left
  width 47%
  margin 0 0 0 1%

.mp-right-column
  float left
  width 49%
  margin 0 1% 0 2%

/* ------- end column ------ */

/* ------------------------- */
/* ------ map styling ------ */

.mp-map
  width 98%
  height 79%
  padding 0
  border 5px solid #dadada
  margin 0

.mp-map-wrapper
  width 100%
  height 100%

/* -------- end map -------- */


/* ------------------------- */
/* -- description styling -- */

.mp-description
  width 97%
  height 43%
  padding 2% 0 0 0
  .mp-title-bar
    margin-bottom 5px
  
.mp-description-wrapper
  width 89%
  height 86% // title-bar is 10% (core.styl)
  padding 0 5% 2% 5%
  overflow auto
  font-size 100%

/* ---- end description ---- */
