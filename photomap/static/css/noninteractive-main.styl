/* ---------------------------------------------------- */
/* ------- styling of the non-interactive pages ------- */
/* ---------------------------------------------------- */

/* ------------------------------ */
/* ---------- imports ----------- */

@import "setup"
@import "core"
@import "input"

/* -------- end imports --------- */

/* ------------------------------- */
/* -------- core stylings -------- */

.mp-non-interactive-content
  overflow auto
  width 95% // 100% - 5% padding
  height 100%
  // margin 0 20%
  padding-left 5%
  a
    text-decoration none
    color $font-color
    letter-spacing 0.25em
  a:hover
    background-color $border-color
    text-decoration underline
  li
    margin 5px



.mp-form
  .mp-form-submit
    margin-left 25% // position under last input field
  label
    margin 1% 0
    float left
    width 25% 
  input, textarea
    margin 1% 0
    width 72% // 1% is buffer for browser stylesheets like border 1px...

// this is djangos css class for errors
.errorlist
  color red

/* --------- end core --------- */




/* ---------------------------- */
/* -- styling for login page -- */

.mp-login-tab
  overflow auto

 #mp-login-register
  width 50%
  margin-left 25%
/* -------- end login -------- */    


/* --------------------------- */
/* -- styling for help page -- */

.mp-faq-entry
  padding 5px
  border 1px dashed black
  margin 3px 0
  .mp-faq-question
    cursor pointer
    font-weight bold
  .mp-faq-answer
    cursor pointer
    display none
    
.mp-tutorial-wrapper
  padding-top 10px
  border-top 4px solid $background-color-dark
  margin-top 30px
.mp-tutorial-entry
  padding 5px
  border 1px dashed black
  margin 1px 0
  .mp-tutorial-description
    font-size 95%
    h5
      font-size 105%
    li
      border 1px dashed black
      margin 3px
      list-style-type none
  .mp-tutorial-subtopic
    font-weight bold
  .mp-tutorial-subtopic-desc
    display none

/* -------- end help --------- */


/* --------------------------- */
/* -- styling for team page -- */

.mp-profile
  // clear both
  display inline-block
  width 20%
  text-align center
  ul
    float left
  li
    list-style-type none
    margin 5px
  .mp-profile-text
    margin-left 15px
    margin-bottom 10px
  img
    height 30% // this is necessary to level all profiles on a horizontal line
    // margin 15px
    // margin-right 30px

/* -------- end team -------- */

/* ------------------------------ */
/* -- styling for landing page -- */

#mp-intro
  font-size 1.3em // make it a little bigger
  div 
    margin 2% 0

.mp-landing-page-links
  width 100%
  position relative
  text-align center

.mp-dashboard-button
  max-width 50%
  margin 0 auto

.mp-demo-button,
.mp-test-button
  width 50%
  max-width 50%
  float left
  text-align center

/* ------ end landing page ------ */

/* ------------------------------ */
/* -- styling for contact page -- */

#mp-contact
  width 50%
  margin-left 10%

/* ------------------------------ */
/* -- impressum -- */

.mp-impressum-contact aside
  width 60%
  margin-left 5%
  font-size .9em