/* ---------------------------------------------------- */
/* ------- styling of the non-interactive pages ------- */
/* ---------------------------------------------------- */

/* ------------------------------ */
/* ---------- imports ----------- */

@import "setup"
@import "core"
@import "input"

/* -------- end imports --------- */

/* ------------------------- */
/* ---- general styling ---- */

#mp-user-password-forgot
  margin 10% 0 0 28%
  position relative
  font-size .7em
  cursor pointer

/* ------ end general ------ */

/* ------------------------------- */
/* -------- core stylings -------- */

.mp-non-interactive-content
  overflow auto
  width 100%
  height 100%
  // margin 0 20%
  padding 0 1%
  a
    text-decoration none
    color $font-color
    letter-spacing 0.25em
  a:hover
    background-color $border-color
    text-decoration underline
  li
    margin 5px
    
article
  p
    width 90%
    margin 8px auto
    padding 0 0 0 10px

address
  width 90%
  margin 8px auto
  padding 0 0 0 10px

.mp-form
  .mp-form-submit
    margin-left 28% // position under last input field => 3% label margin-right + 25% label width
  label
    margin 1% 0
    margin-right 3%
    float left
    width 25%
  label.mp-form-big-label
    width 72%
  input, textarea
    margin 1% 0
    width 72% // 100% - 3% label margin right (= space between laveb and input) - 25% label width
  input[type="radio"]
    width 25%
  
.mp-form label.error
  display none !important // prevents errors from being shown
  
.mp-request-success
  color blue
  font-weight bold
  font-size 1.1em
  display none

// this is djangos css class for errors
.errorlist
  color red

/* --------- end core --------- */

/* ------------------------------ */
/* -- styling for payment page -- */

.mp-payment-info
  width 40%
  border 1px solid gray
  margin 5px auto
  border-radius 5px
  span
    font-weight bolder

/* --------- end payment -------- */  

/* --------------------------- */
/* -- styling for help page -- */

#help-navigation
  margin-bottom 40px
  text-align center
  background-color #eaeaea
  a
    padding 0 20px
    letter-spacing .25em
  .mp-active-link
   background-color #fff
   text-decoration underline
    

#mp-project-introduction h2,
#mp-project-introduction h3
  text-align center
  
.mp-keiken-before,
.mp-keiken-reasons
  clear both
.mp-keiken-reasons
  margin-bottom 30px

.mp-keiken-alternatives
  position relative
.mp-keiken-alternative
  width 26%
  margin 20px 2%
  float left

.mp-keiken-presentation-text
  width 60%
  float left
  p
    margin 0
    padding 5px 0
    
.mp-keiken-presentation-text .mp-keiken-presentation-text-firsty
  padding-top 10px
.mp-keiken-presentation-text .mp-keiken-presentation-text-lasty
  padding-bottom 10px

.mp-keiken-presentation-graphic
  width 40%
  float left
  img
    width 100%
    max-width 646px
    height auto
    max-height 630px

.mp-tutorial-color-table
  max-width 80%
  margin 0 auto
  background-color #eaeaea
  td
    background-color white
  th
    background-color white

.mp-tutorial-color-table tr
  td:first-child
    text-align center

.ui-tabs-vertical
  width 55em
  .ui-tabs-nav
    width 12em
    padding .2em .1em .2em  .2em
    float left
    li
      width 100%
      border-bottom-width 1px !important
      border-right-width 0 !important
      margin 0 -1px .2em 0
      clear left
      a
        display block
    li.ui-tabs-active
      padding-bottom 0
      padding-right .1em
      border-right-width 1px
  .ui-tabs-panel
    width 40em
    padding 1em
    float right

/* -------- end help --------- */


/* --------------------------- */
/* -- styling for team page -- */

.mp-profile
  // clear both
  display inline-block
  width 20%
  text-align center
  ul
    float left
  li
    list-style-type none
    margin 5px
  .mp-profile-text
    margin-left 15px
    margin-bottom 10px
  img
    height 30% // this is necessary to level all profiles on a horizontal line
    max-height 250px // necessary for IE (is max-size of the images)
    max-width 250px // necessary for IE
    // margin 15px
    // margin-right 30px

.mp-team-members
  text-align center

/* -------- end team -------- */

/* ------------------------------ */
/* -- styling for landing page -- */

/* ....... general styles ........*/

#landingpage .mp-content
  background-color #000 //#dadada

#landingpage .background-image,
#landingpage .background-overlay-black,
#landingpage .mp-non-interactive-content
  width 100%
  height 80%
  position absolute
  top 13%
  left 0

#landingpage .background-image
  height  80% //auto //80%
  max-height 80%
  opacity 0.5
  
  
#landingpage .background-overlay-black
  z-index 1
  background-color rgba(0,0,0,0.01)
  //display none

#landingpage .mp-non-interactive-content
  height 100%
  position relative
  top 0%
  background none
  font-size 1.2em
  color #dadada
  overflow hidden
  z-index 2

#landingpage .mp-reference
  color white
#landingpage .mp-reference:hover
  color #88ff88
  background none
  text-decoration none

section.keiken-intro
  width 30%
  max-height 85%
  padding 30px
  position absolute
  top 5%
  left 1%
  background-color rgba(0,0,0,0.6)
  text-align left
  overflow auto
  h2
    margin-bottom 30px
    margin-left 0
    text-align left
  div
    margin-bottom 10px

/* ....... main styles ....... */
.mp-landing-page-links
  width 100%
  
.mp-landingpage-button
  width 100%
  min-width 80%
  margin-top 5px
  font-size .8em
  padding 3px

.mp-landingpage-button:hover
  cursor pointer
  color #88ff88
  background-color black
  
/* ....... guest styles ..... */
section.keiken-intro
  form input
    width 47%
    min-height 25px
    float left
  .submit-guest-password
    margin-left 6%
    cursor pointer
    box-shadow(0px 0px 5px rgba(255,255,255,0.8))
    
.mp-guest-login-explain
  margin-top 30px
  font-size .8em
  font-style italic

/* ......... login styles ...... */ 

section#keiken-login
  width 30%
  max-height 85%
  min-height 60%
  padding 10px
  position absolute
  top 5%
  left 100%
  background-color rgba(0,0,0,0.6)
  font-size .8em
  visibility hidden

#mp-login-switch span
  position absolute
  right 5px
  top 5px
  a
    color #bababa
    font-size .8em
#mp-login-switch span:hover
  cursor pointer
  a
    color #88ff88
#mp-login-switch span a:hover
  text-decoration none
  background none

#keiken-login .mp-login-tab
  overflow auto
  label
    padding 3px
  .mp-form-submit
    color white //#050505
  h2
    text-align center
    padding 5px
    margin-top 10px
    
#landingpage .mp-login-tab input,
.mp-landingpage-button
  background-color rgba(0,0,0,0.5)
  color white
  border-radius 5px
  box-shadow(inset 0px 0px 5px rgba(255,255,255,0.8))
  padding 3px
  
#keiken-login .mp-login-tab p .mp-landingpage-form-submit
  margin-left 28% //instead of using mp-form-submit
#keiken-login .mp-login-tab p .mp-landingpage-form-submit:hover
  cursor pointer
  color #88ff88
  background-color black

#mp-user-password-forgot 
  color white
#mp-user-password-forgot:hover 
  background-color rgba(0,0,0,0)
  color #88ff88
  text-decoration none
#account #mp-user-password-forgot
  color #000
#account #mp-user-password-forgot:hover 
  background none
  color #7a7a7a
  text-decoration none
    
#mp-login-register
  width 50%
  margin-left 25%
  
#mp-login-error
  width 80%
  margin 0 10%

/* ------ end landing page ------ */

