/* panel styling */

.mp-logo
  background-color blue
  float left
  color white
  text-align center
  font-size 120%
  width 20%
  height 100%
  
.mp-page-title
  float left
  width 80%
  height 49%
  h1
    color $background-color-darker
    letter-spacing 2px
    float right
    margin 0

.mp-top-panel
  float left
  width 80%
  height 50%
  border-top 1px solid $background-color-light

.mp-searchfield
  color white
  text-align center
  float left
  background-color blue
  width 30%
  height 100%
  margin-left 20%

.mp-controls-wrapper
  width 48%
  height 100%
  padding 0 1%
  float left
  text-align center

.mp-controls
  position relative
  float right
  img
    cursor pointer
    margin 0 5px
  .mp-option-logout
    margin 0 -5px 0 5px

.mp-bottom-panel
  background $background-color-darker
  height 100%
  width 98%
  padding 0 1%
  text-align center
  letter-spacing 2px
  a
    text-decoration none
    color white
