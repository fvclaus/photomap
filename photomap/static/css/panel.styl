/* panel styling */

.mp-logo
  width 18%
  height 96%
  float left
  color blue
  text-align center
  font-size 120%
  
.mp-page-title
  width 80%
  height 49%
  float left
  h1
    margin 0
    float right
    color $background-color-darker
    letter-spacing 2px

.mp-top-panel
  width 80%
  height 50%
  border-top 1px solid $background-color-light
  float left

.mp-searchfield
  width 28%
  height 90%
  margin-left 20%
  float left
  display none
  color blue
  text-align center

.mp-panel-controls-wrapper
  width 48%
  height 100%
  padding 0 1%
  float left
  text-align center

.mp-internal-links
  width 58%
  height 100%
  padding 0 1%
  float right
  text-align right
  a
    text-decoration none
    color white

.mp-user,
.mp-login-link
  width 38%
  height 100%
  padding 0 1%
  float right
  text-align left
  color white
  a
    height 100%
    color white
    text-decoration none
  span
    height 100%
    margin-right 5px
    float left
    
.mp-option-to-dashboard,
.mp-option-toggle-gallery
  width 30%
  height 85%
  border 1px solid white
  margin-top 1px
  margin-left 5px
  float left
  color white
  text-decoration none
  border-radius 25px
.mp-gallery-visible
  display none
  
.mp-photo-title
  display none

