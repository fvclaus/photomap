/* panel styling */

.mp-logo
  float left
  color blue
  text-align center
  font-size 120%
  width 18%
  height 96%
  
.mp-page-title
  float left
  width 80%
  height 49%
  h1
    color $background-color-darker
    letter-spacing 2px
    float right
    margin 0

.mp-top-panel
  float left
  width 80%
  height 50%
  border-top 1px solid $background-color-light

.mp-searchfield
  display none
  color blue
  text-align center
  float left
  width 28%
  height 90%
  margin-left 20%

.mp-controls-wrapper
  width 48%
  height 100%
  padding 0 1%
  float left
  text-align center

.mp-internal-links
  float left
  height 100%
  width 58%
  padding 0 1%
  text-align right
  a
    text-decoration none
    color white

.mp-user
  float left
  height 100%
  width 38%
  padding 0 1%
  text-align left
  color white
  a
    text-decoration none
    height 100%
  span
    float left
    height 100%
    margin-right 5px
    
.mp-option-to-dashboard
  margin-top 1px
  height 85%
  width 30%
  color white
  text-decoration none
  float left
  border 1px solid white
  border-radius 25px
  
.mp-photo-title
  display none

