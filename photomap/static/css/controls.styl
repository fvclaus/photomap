/* ------------------------------------------------- */
/* ---- styling of controls, links and buttons ----- */
/* ------------------------------------------------- */


/* ------------------------------ */
/* ---- control box styling ----- */

.mp-controls-wrapper
  width 10%
  height 7%
  margin 0 2px
  z-index 1050 //50 less than fancybox and more than overlay
  position absolute
  background #eaeaea
  border-radius 15px
  box-shadow(5px 5px 25px #4a4a4a)
  text-align center
  img
    height 40px
    width 40px
    margin 2px 5px 0 5px
    
/* ------- end control box ------ */


/* ------------------------------- */
/* -- styling of extra controls -- */

.mp-option-add-wrapper
  width 19%
  height 20%
  border 1px solid $background-color-darker
  float left
  display block
  background $background-color-light
  .mp-option-add
    width 20%
    height 20%
    padding 0
    float none
    display inline
  
.mp-option-to-login
  margin 50px
  text-align center

/* ------ end extra controls ----- */

/* ------------------------------- */
/* ----- fullscreen controls ----- */

.mp-image-zoom
  width 5%
  height auto
  z-index 999
  position absolute
  display none

.mp-image-overlay-close
  float none
  right 4%

.mp-image-overlay-close, .mp-image-nav img
  width 3%
  height auto
  z-index 10
  position absolute
 .mp-image-nav-next
    right 1%
 .mp-image-nav-prev
    left 1%

.mp-image-overlay
  width 100%
  height 100%
  z-index 1200
  position fixed
  top 0px
  left 0px
  background transparent url(../../images/black.png) repeat top left
  text-align center
  .mp-image-overlay-wrapper
    border $border-light
    position absolute
    top 50%
    left 50%
    box-shadow($box-shadow-black)

.mp-loading
  width 48px
  height 48px
  margin -24px 0 0 -24px
  position absolute
  top 50%
  left 50%
  background transparent url(../../images/fullscreen-loader.gif) no-repeat center center
  text-indent -9000px

/* ---- end fullscreen controls ---- */
