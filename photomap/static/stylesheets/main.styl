/* Photo Map Style */

/* variable declaration */

$visited-color = #d60000
$current-color = #306d12

$background-color-dark = #000
$background-color-darker = #333
$background-color-lighter = #fff
$background-color-light = #f4f4f4
$padding = 5px

$border = 5px 
$border-light = $border solid #fff

$height-main = 94%
$width-main = 50%

$box-shadow = 1px 1px 3px
$box-shadow-light-grey = $box-shadox #999
$box-shadow-lighter-grey = $box-shadow #cac4ab
$box-shadow-black = $box-shadow #000

$transition = all 0.2s ease-in-out

$font-family = 'Rokkitt',sans-serif

$mp-dialog-margin-top = 5px

/*end variable declaration */

/* mixins */

center-element(width,height)
  top 50%
  left 50%
  margin-left -(width/2)
  margin-top -(height/2)

box-shadow(color) 
  -moz-box-shadow color
  -webkit-box-shadow color
  box-shadow color
  
transition
  -webkit-transition $transition
  -moz-transition $transition
  -o-transition $transition
  -ms-transition $transition
  transition $transition

/* end mixins */

/* imports */

@import "input"
@import "album"
@import "image"
@import "description"
@import "panel"

/* end imports */


/* css */

/* highest level styling */  
body 
  height 100%
 /* overflow hidden */
html
  height 100%  

.mp-container
  background #f4f4f4
  border $border-light
  min-height 100%
  margin 0 auto
  box-shadow($box-shadow-lighter-grey)

.mp-invisible
  visibility hidden
  position absolute
  whitespace nowrap

.mp-font 
  font-family $font-family
  font-size 120%
  text-align center

.mp-map
  width 100%
  height $height-main
  //min-height $height-main
  background red // $background-color-light
  float left
  
.mp-map-container
  width 100%
  height 100%
  background $background-color-light
  
.mp-map-wrapper
  width 100%
  height 100%


.mp-label
  font-weight 700
  text-shadow 1px 1px 1px #000
  text-align center
  margin auto
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  color white
  max-width 50%

.disabled
  opacity 0.3

.mp-footer
  height 3%
  width 50%
  clear both
  position absolute
  z-index 5
  
.mp-header
  background $background-color-darker
  border-bottom $border-light
  width 100%
  height 5%
  
.tooltip
  display none
  background transparent url(../../images/black-tooltip.png) no-repeat
  font-size 9px
  text-align center
  height 53px
  width 120px
  padding 10px 5px 5px 5px
  color #eee
  
.mp-content-container
  position absolute
  width 70%
  height 85%
  padding 5px
  border 2px solid $background-color-darker
  border-radius 5px
