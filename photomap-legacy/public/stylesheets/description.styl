/* image description styling */

//width calculated by js
.mp-description-wrapper
  overflow auto
  text-align center
  padding 1%
  font-size 100%

#mp-photo-description
  position absolute
  background $background-color-light
  opacity 0.9

.mp-status-image
  float right
  color white
  right 1%

.mp-description-overlay-close
  position absolute
  height 40px
  width 40px
