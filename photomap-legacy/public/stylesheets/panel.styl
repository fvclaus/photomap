/* panel styling */

.mp-userpanel
  width 100%
  height 100%

.mp-controls-wrapper
  width 79%
  height 100%
  padding-left 1%
  float left
  text-align center

.mp-controls
  position relative
  float right
  img
    cursor pointer

.mp-bottom-panel
  background $background-color-darker
  border-top $border-light
  border-bottom $border-light
  height 100%
  width 100%
  text-align center
  a
    text-decoration none
    color white
    
.mp-logo
  background-color blue
  float left
  color white
  text-align center
  font-size 120%
  width 20%
  height 100%
